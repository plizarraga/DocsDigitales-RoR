<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="text-center">Login</h1>
			</div>
			<div class="modal-body">
				<%= form_tag sessions_path :class => "form col-md-12 center-block" do %>
					<div class="form-group">
						<%= text_field_tag :email, params[:email], class: "form-control input-lg", placeholder: "Correo Electrónico" %>
					</div>
					<div class="form-group">
						<%= password_field_tag :password, class: "form-control input-lg", placeholder: "Contraseña" %>
					</div>
					<div class="form-group">
						<%= submit_tag "Log in"%>
						<span class="pull-right"><%= link_to 'Crear Usuario', sign_up_path %></span>
					</div>
				<% end %>
			</div>
			<div class="modal-footer">
				<div class="col-md-12">			
				</div>
			</div>
		</div>
	</div>
</div>