<div class="page-header">
	<h1>Sucursales</h1>
</div>
<%= link_to 'Nueva Scursal', new_sucursal_path %>
<table class="table table-hover table-striped">
	<thead>
		<th>Nombre</th>
		<th>Calle</th>
		<th>Colonia</th>
		<th>No. Ext.</th>
		<th>No. Int.</th>
		<th>CP</th>
		<th>Ciudad</th>
		<th>Pais</th>
		<th colspan="3"></th>
	</thead>
	<tbody>
		<% @sucursales.each do |sucursal| %>
		<tr>
			<td><%= sucursal.nombre %></td>
			<td><%= sucursal.calle %></td>
			<td><%= sucursal.colonia %></td>
			<td><%= sucursal.num_ext %></td>
			<td><%= sucursal.num_int %></td>
			<td><%= sucursal.cp %></td>
			<td><%= sucursal.ciudad %></td>
			<td><%= sucursal.pais %></td>
			<td><%= link_to 'Mostrar', sucursal_path(sucursal) %></td>
			<td><%= link_to 'Editar', edit_sucursal_path(sucursal) %></td>
			<td><%= link_to 'Eliminar', store_path(sucursal),
			method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
