<div class="page-header">
  <h1>Empleados Registrados</h1>
</div>
<table class="table table-hover table-striped">
  <thead>
    <th>Nombre</th>
    <th>RFC</th>
    <th>Puesto</th>
    <th>Sucursal</th>
    <th colspan='3'></th>
  </thead>
  <tbody>
    <% for empleado in @sucursal.employees %>
    <tr>
      <td><%= empleado.nombre %></td>
      <td><%= empleado.rfc %></td>
      <td><%= empleado.puesto %></td>
      <td><%= empleado.store.nombre %></td>
      <td><%= link_to 'Mostrar', empleado_path(empleado) %></td>
      <td><%= link_to 'Editar', edit_empleado_path(empleado) %></td>
      <td><%= link_to 'Eliminar', employee_path(empleado),
      method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Regresar', sucursales_path %> | 
