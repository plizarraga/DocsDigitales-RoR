<div class="page-header">
	<h1>Empleados</h1>
</div>
<%= link_to 'Nuevo Empleado', new_empleado_path %>
<table class="table table-hover table-striped">
	<thead>
		<th>Nombre</th>
		<th>RFC</th>
		<th>Puesto</th>
		<th>Sucursal</th>
		<th colspan='3'></th>
	</thead>
	<tbody>
		<% @empleados.each do |empleado| %>
		<tr>
			<td><%= empleado.nombre %></td>
			<td><%= empleado.rfc %></td>
			<td><%= empleado.puesto %></td>
			<td><%= empleado.store.nombre %></td>
			<td><%= link_to 'Mostrar', empleado_path(empleado) %></td>
			<td><%= link_to 'Editar', edit_empleado_path(empleado) %></td>
			<td><%= link_to 'Eliminar', employee_path(empleado),
			method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
